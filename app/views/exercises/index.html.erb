<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all exercises
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new exercise
    </h2>

    <form action="/insert_exercise" method="post">
      <div class="form-group">
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date" class="form-control">
      </div>

      <div class="form-group">
        <label for="ex_type_box">
          Ex type
        </label>

        <input type="text" id="ex_type_box" name="query_ex_type" class="form-control">
      </div>

      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create exercise
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Date
        </th>

        <th>
          Ex type
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @exercises.each do |exercise| %>
      <tr>
        <td>
          <%= exercise.id %>
        </td>

        <td>
          <%= exercise.date %>
        </td>

        <td>
          <%= exercise.ex_type %>
        </td>

        <td>
          <%= exercise.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(exercise.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(exercise.updated_at) %> ago
        </td>

        <td>
          <a href="/exercises/<%= exercise.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
