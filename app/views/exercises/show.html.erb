<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Exercise #<%= @exercise.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/exercises" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_exercise/<%= @exercise.id %>" class="btn btn-block btn-outline-secondary">
          Delete exercise
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Date
      </dt>
      <dd>
        <%= @exercise.date %>
      </dd>

      <dt>
        Ex type
      </dt>
      <dd>
        <%= @exercise.ex_type %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @exercise.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@exercise.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@exercise.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit exercise
    </h2>

    <form action="/modify_exercise/<%= @exercise.id %>"  method="post" >
      <div class="form-group">
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date" class="form-control" value="<%= @exercise.date %>">
      </div>

      <div class="form-group">
        <label for="ex_type_box">
          Ex type
        </label>

        <input type="text" id="ex_type_box" name="query_ex_type" class="form-control" value="<%= @exercise.ex_type %>">
      </div>

      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" class="form-control" value="<%= @exercise.user_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update exercise
      </button>
    </form>
  </div>
</div>

<hr>
